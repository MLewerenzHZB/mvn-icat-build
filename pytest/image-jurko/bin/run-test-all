#! /bin/bash

. $HOME/.env

for v in 3.4 3.5 3.6 3.7 3.8 3.9
do
    PYTHON=python$v
    cd $WORKDIR
    rm -rf $DISTDIR
    tar xfz $DIST
    cd $DISTDIR
    cp -p /home/abuild/.config/icat/icat.cfg tests/data
    if test -n "$TESTARGS"
    then
	$PYTHON setup.py test --test-args="$TESTARGS"
    else
	$PYTHON setup.py test
    fi
done
